<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WeatherWpf.Styles">

    <Style x:Key="BaseWindow" TargetType="{x:Type Window}">
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="AllowsTransparency" Value="False"/>
        <Setter Property="Icon" Value="icoWindow.ico"/>
        <Setter Property="Background" Value="WhiteSmoke"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="WindowState" Value="Normal"/>
    </Style>

    <Style x:Key="MainWindow" BasedOn="{StaticResource BaseWindow}" TargetType="{x:Type Window}">
        <Setter Property="Title" Value="Weather Api OWM"/>
        <Setter Property="Height" Value="225"/>
        <Setter Property="Width" Value="260"/>
    </Style>

    <Style x:Key="WeatherWindow" BasedOn="{StaticResource BaseWindow}" TargetType="{x:Type Window}">
        <Setter Property="Title" Value="Weather Region"/>
        <Setter Property="Height" Value="150"/>
        <Setter Property="Width" Value="205"/>
    </Style>
    
</ResourceDictionary>